{
  "version": "0.2.0",
  "configurations": [
    {
      "type": "node",
      "request": "launch",
      "name": "Launch Jest",
      "program": "${workspaceFolder}/node_modules/jest/bin/jest.js",
      "args": [
        "-i"
      ],
      "preLaunchTask": "build",
      "internalConsoleOptions": "openOnSessionStart",
      "outFiles": [
        "${workspaceRoot}/dist/**/*"
      ],
      "env": {
        "NODE_ENV": "developement"
      }
    }
  ]
}